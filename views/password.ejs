<%- include('./partials/header') -%>
</head>
<%- include('./partials/navbar') -%>
<body class="my-account-password-page">
    <div class="my-account">
        <section class="my-account__banner">
            <div class="my-account__container">
                <h2 class="my-account__heading my-account__span">Minha conta</h2>
            </div>
        </section>

        <div class="my-account__container">
            <div class="my-account__wrapper">
                <aside class="my-account__menu hidden-print">
                    <ul>
                        <li>
                            <a href="/myAccount" class="">
                                Perfil
                            </a>
                        </li>
                        <li>
                            <a href="/account/password" class="active">
                                Senha
                            </a>
                        </li>
                        <li>
                            <a href="/account/certificates">
                                Certificados
                            </a>
                        </li>
                    </ul>
                </aside>
                <main class="my-account__content" role="main">
                    <h3 class="my-account__subheading">Alterar senha</h3>
                    <form action="/account/password" accept-charset="UTF-8" method="post">
                        <input name="utf8" type="hidden" value="&#x2713;" autocomplete="off" />
                        <input type="hidden" name="_method" value="put" autocomplete="off" />
                        <input type="hidden" name="authenticity_token" value="YOUR_AUTH_TOKEN" autocomplete="off" />

                        <div class="form-group">
                            <label for="user[password]">Alterar senha</label>
                            <input type="password" id="user[password]" name="user[password]" autocomplete="off" autofocus class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="user[password_confirmation]">Reinsira a senha</label>
                            <input type="password" id="user[password_confirmation]" name="user[password_confirmation]" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="user[current_password]" class="form__label">Senha atual</label>
                            <input type="password" id="user[current_password]" name="user[current_password]" class="form-control" />
                            <p class="form__notice">(precisamos da sua senha atual para confirmar suas alterações)</p>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="commit" value="Atualizar" class="btn btn-primary" />
                        </div>
                    </form>
                </main>
            </div>
        </div>
    </div>
</body>

<%- include('./partials/footer') -%>