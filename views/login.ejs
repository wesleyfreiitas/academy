<%- include('./partials/header') -%>
    <link rel="stylesheet" href="main.css">
</head>

<body>
    <div class="page">
        <form method="POST" class="formLogin" action="/authenticate">
            <h1>Login</h1>
            <p>Digite os seus dados de acesso no campo abaixo.</p>
            <label for="email">E-mail</label>
            <input type="email" name="email" placeholder="Digite seu e-mail" autofocus="true" />
            <label for="password">Senha</label>
            <input type="password" name="password" placeholder="Digite seu e-mail" />
            <a href="/recoverpassword">Esqueci minha senha</a><a href="/signup">Cadastre-se</a>
            <input type="submit" value="Acessar" class="btn" />
        </form>
    </div>

</body>
